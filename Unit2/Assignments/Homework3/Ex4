#include <stdio.h>
int main()
{
	float sum,a[100];
	int i,n;
	sum=0;
	printf("Enter the numbers of the data: ");
	fflush(stdin); fflush(stdout);
	scanf("%d",&n);
	for(i=1;i<=n;i++)
	{
		printf("%d. Enter number:",i);
		fflush(stdin); fflush(stdout);
		scanf( "%f",&a[i]);
		sum+=a[i];
	}
	printf("Average= %.2f",sum/n);
}
