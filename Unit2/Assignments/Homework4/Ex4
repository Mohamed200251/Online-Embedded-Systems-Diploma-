#include <stdio.h>
unsigned int power(unsigned int, unsigned int);
int main()
{
	int base;
	int power_num;
	printf("Enter base number: ");
	fflush(stdin); fflush(stdout);
	scanf("%d",&base);
	printf("Enter power number (positive integer): ");
	fflush(stdin); fflush(stdout);
	scanf("%d",&power_num);
	printf("%d^%d = %d",base,power_num,power(base,power_num));
	return 0;
}
unsigned int power(unsigned int a, unsigned int b)
{
	unsigned int p;
	p=a;
	if (b>0)
	p=p*power(a,--b);
	else if ((b==0)&&(a!=0))
	p=1;
	else if ((b==0)&&(a==0))
	printf("Error: unspecified quantity");
	return p;
}

