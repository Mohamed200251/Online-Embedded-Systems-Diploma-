#include <stdio.h>
int max(int);
int main()
{
	int number;
	printf("Enter a number: ");
	fflush(stdin); fflush(stdout);
	scanf("%d",&number);
	printf("Max number of ones between 2 zero= %d",max(number));
}
int max(int num)
{
	char max=0;
	char counter=12,start,end;
	for(;counter>=0;counter--)
			if ((num&(1<<counter))==0)
					{start=counter; break;}
	while(counter>=0)
	{
		for(counter--;counter>=0;counter--)
			if ((num&(1<<counter))==0)
					{end=counter; break;}
		if((start-end-1)>max)
		max=start-end-1;
			start=end;
	}
	return max;
}
